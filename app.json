{
  "id": "com.maxvandelaar.webos-plus",
  "version": "0.1.0",
  "compatibility": ">=3.1.0",
  "sdk": 2,
  "name": {
    "en": "WebOS Plus",
    "nl": "WebOS Plus"
  },
  "brandColor": "#A50034",
  "description": {
    "en": "Adds improved WebOS integration",
    "nl": "Voegt verbeterde WebOS integratie toe"
  },
  "tags": {
    "en": [
      "lg",
      "lgtv",
      "WebOS",
      "tv",
      "television",
      "video"
    ],
    "nl": [
      "lg",
      "lgtv",
      "WebOS",
      "tv",
      "televisie",
      "video"
    ]
  },
  "category": [
    "video"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Max van de Laar",
    "email": "max.vandelaar@me.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Max van de Laar",
        "email": "max.vandelaar@me.com"
      }
    ],
    "translators": [
      {
        "name": "Max van de Laar"
      }
    ]
  },
  "discovery": {
    "webos": {
      "type": "ssdp",
      "ssdp": {
        "search": "urn:lge-com:service:webos-second-screen:1"
      },
      "id": "{{headers.usn}}",
      "conditions": [
        [
          {
            "field": "headers.st",
            "match": {
              "type": "string",
              "value": "urn:lge-com:service:webos-second-screen:1"
            }
          }
        ]
      ]
    }
  },
  "flow": {
    "triggers": [],
    "conditions": [
      {
        "id": "webos_muted",
        "title": {
          "en": "The tv !{{is|isn't}} muted",
          "nl": "De tv !{{is|is niet}} gemuted"
        },
        "args": [
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "webos_volume_equals",
        "title": {
          "en": "Volume !{{equals|doesn't equal}}",
          "nl": "Het volume !{{is|is niet}} gelijk aan"
        },
        "args": [
          {
            "name": "volume",
            "type": "number",
            "min": 0,
            "max": 100,
            "step": 1
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "webos_volume_smaller",
        "title": {
          "en": "Volume !{{is|isn't}} smaller than",
          "nl": "Het volume !{{is|is niet}} kleiner dan"
        },
        "args": [
          {
            "name": "volume",
            "type": "number",
            "min": 0,
            "max": 100,
            "step": 1
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "webos_volume_larger",
        "title": {
          "en": "Volume !{{is|isn't}} larger than",
          "nl": "Het volume !{{is|is niet}} groter dan"
        },
        "args": [
          {
            "name": "volume",
            "type": "number",
            "min": 0,
            "max": 100,
            "step": 1
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "send_toast",
        "title": {
          "en": "Send a toast message",
          "nl": "Stuur een toast bericht"
        },
        "args": [
          {
            "name": "message",
            "type": "text",
            "placeholder": {
              "en": "Required",
              "nl": "Verplicht"
            }
          },
          {
            "name": "iconData",
            "type": "text",
            "placeholder": {
              "en": "Image Base64 (without 'data:image/*;base64,')",
              "nl": "Image Base64 (zonder 'data:image/*;base64,')"
            }
          },
          {
            "name": "iconExtension",
            "type": "text",
            "placeholder": {
              "en": "The image extension",
              "nl": "De extensie van de afbeelding"
            }
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "change_channel_number",
        "title": {
          "en": "Change channel (number)",
          "nl": "Verander het kanaal (nummer)"
        },
        "args": [
          {
            "name": "channel",
            "type": "number",
            "min": 0,
            "step": 1
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "launch_app",
        "title": {
          "en": "Launch app or input",
          "nl": "Open app or input"
        },
        "args": [
          {
            "name": "app",
            "type": "autocomplete",
            "placeholder": {
              "en": "NOTE: TV must be turned on to select",
              "nl": "LET OP: TV moet aan zijn om te selecteren"
            }
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
          }
        ]
      },
      {
        "id": "change_channel_list",
        "title": {
          "en": "Change the channel (list)",
          "nl": "Verander het kanaal (lijst)"
        },
        "args": [
          {
            "name": "channel",
            "type": "autocomplete",
            "placeholder": {
              "en": "NOTE: TV must be turned on to select",
              "nl": "LET OP: TV moet aan zijn om te selecteren"
            }
          },
          {
            "name": "webosDevice",
            "type": "device",
            "filter": "driver_id=webos_plus"
