  },
  "drivers": [
    {
      "id": "webos_plus",
      "name": {
        "en": "WebOS Plus"
      },
      "class": "tv",
      "discovery": "webos",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General Settings",
            "nl": "Instellingen"
          },
          "children": [
            {
              "id": "pollInterval",
              "type": "number",
              "label": {
                "en": "Poll interval"
              },
              "hint": {
                "en": "Interval to check if the tv is on or off",
                "nl": "Interval om te controleren of de tv aan of uit is"
              },
              "value": 120,
              "min": 120,
              "max": 3600,
              "units": {
                "en": "seconds"
              }
            }
          ]
        }
      ],
      "capabilities": [
        "onoff",
        "volume_set",
        "channel_down",
        "channel_up",
        "volume_down",
        "volume_up",
        "volume_mute"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "uiQuickAction": true
        },
        "volume_set": {
          "units": "%",
          "min": 0,
          "max": 100,
          "step": 1,
          "decimals": 0
        }
      },
      "images": {
        "large": "/drivers/webos-plus/assets/images/large.png",
        "small": "/drivers/webos-plus/assets/images/small.png"
      }
    }
  ]
}
